<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear_layout_home_page_fragment"
        android:layout_marginTop="@dimen/fragment_linear_layout_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_lin_layout_height">
        <ImageView
            android:paddingLeft="@dimen/fragment_title_tv_margin_right"
            android:src="@mipmap/logo_title_c"
            android:layout_width="@dimen/weight_width"
            android:layout_weight="2"
            android:scaleType="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/fragment_title_tv_margin_left"
            android:layout_marginRight="@dimen/fragment_title_tv_margin_right"
            android:layout_width="@dimen/weight_width"
            android:layout_weight="7"
            android:background="@drawable/title_edt_shape"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="@dimen/weight_width"
            android:layout_weight="1"
            android:scaleType="center"
            android:layout_marginRight="@dimen/fragment_title_tv_margin_right"
            android:src="@mipmap/icon_gift_send_remind"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear_layout_home_page_fragment_second"
        android:layout_below="@id/linear_layout_home_page_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_lin_layout_height">
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout_home_page_fragment"
            android:layout_weight="9"
            android:layout_width="@dimen/weight_width"
            app:tabTextColor="#321E1E"
            app:tabSelectedTextColor="#FF2D47"
            android:layout_height="match_parent">

        </android.support.design.widget.TabLayout>
        <ImageView
            android:layout_weight="1"
            android:layout_width="@dimen/weight_width"
            android:layout_height="match_parent" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home_page_fragment"
        android:layout_below="@id/linear_layout_home_page_fragment_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
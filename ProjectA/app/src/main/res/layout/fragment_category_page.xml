<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_category_page"
        android:layout_width="match_parent"
        app:tabGravity="center"
        android:layout_height="@dimen/tab_layout_height">

    </android.support.design.widget.TabLayout>
    <TextView
        android:id="@+id/tv_search_category_page"
        android:layout_below="@id/tab_layout_category_page"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_20" />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_category_page"
        android:layout_below="@id/tv_search_category_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
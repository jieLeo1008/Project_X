<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/activity_horizontal_margin_90">

    <ImageView
        android:layout_margin="@dimen/activity_horizontal_margin_12"
        android:id="@+id/iv_item_strategy_details_up_page"
        android:scaleType="fitXY"
        android:layout_width="@dimen/activity_horizontal_margin_140"
        android:layout_height="match_parent" />

        <TextView
            android:layout_marginTop="@dimen/activity_horizontal_margin_30"
            android:id="@+id/tv_title_item_strategy_up_page"
            android:layout_toRightOf="@id/iv_item_strategy_details_up_page"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/margin_20" />
        <TextView
            android:id="@+id/tv_author_item_strategy_up_page"
            android:layout_below="@id/tv_title_item_strategy_up_page"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@id/iv_item_strategy_details_up_page"
            android:layout_height="@dimen/margin_20" />

</RelativeLayout>
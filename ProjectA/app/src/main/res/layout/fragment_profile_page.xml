<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/relative_layout_main_profile_page"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/liner_layout_top_profile_page"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/icon_checkin_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_user_name_profile_page"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_settings_black"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ScrollView
        android:layout_below="@id/liner_layout_top_profile_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relative_layout_first_profile_page"
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <ImageView
                    android:layout_margin="20dp"
                    android:id="@+id/iv_head_profile_page"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <LinearLayout
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_below="@id/iv_head_profile_page"
                    android:layout_height="60dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="购物车"
                        android:drawableTop="@mipmap/icon_cart_black"
                        android:gravity="center"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="订单"
                        android:drawableTop="@mipmap/icon_order_grey"
                        android:gravity="center"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/icon_coupon_grey"
                        android:text="礼券"
                        android:gravity="center"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="客服"
                        android:drawableTop="@mipmap/icon_service_grey"
                        android:gravity="center"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_layout_second_profile_page"
                android:layout_below="@id/relative_layout_first_profile_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TabLayout
                        android:id="@+id/tab_layout_profile_page"
                        android:layout_width="200dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="50dp">

                    </android.support.design.widget.TabLayout>
                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_profile_page"
                        android:layout_below="@id/tab_layout_profile_page"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">


                    </android.support.v4.view.ViewPager>
                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:layout_below="@id/relative_layout_second_profile_page"
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:text="退出登录"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/item_gift_page_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_details_gift_page"
        android:scaleType="fitXY"
        android:layout_width="@dimen/item_body_details_image_view_width"
        android:layout_height="@dimen/item_body_details_image_view_height" />


</android.support.v7.widget.CardView>
    <TextView
        android:layout_below="@id/card_view"
        style="@style/item_body_details_gift_page_text_view"
        android:id="@+id/tv_short_description_details_gift_page" />
    <TextView
        android:id="@+id/tv_name_details_gift_page"
        style="@style/item_body_details_gift_page_text_view"
        android:layout_below="@id/tv_short_description_details_gift_page"
        />
    <TextView
        android:layout_below="@id/tv_name_details_gift_page"
        style="@style/item_body_details_gift_page_text_view"
        android:id="@+id/tv_price_details_gift_page"/>

</RelativeLayout>
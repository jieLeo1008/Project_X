<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin_50">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_80"
            android:layout_marginRight="@dimen/activity_horizontal_margin_80"
            android:orientation="horizontal"
            android:layout_height="@dimen/text_size_20">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="#f88"
                android:layout_height="1dp" />
            <TextView
                android:text="@string/recommend_gift"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_12"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#f88"
                android:layout_gravity="center_vertical"
                android:layout_height="1dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
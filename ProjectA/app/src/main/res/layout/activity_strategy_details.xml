<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_strategy_sdetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.jieleo.projecta.activity.StrategyDetailsActivity">

    <RelativeLayout
        android:id="@+id/relate_layout_strategy_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_back_strategy_details"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/btn_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="攻略详情"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_look_all_strategy_details"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="查看全集"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linerlayout_bottom_strategy_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_heart_strategy_details"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:button="@null"
            android:drawableLeft="@drawable/likes_checkbox_selector"
            android:gravity="left|center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="喜欢"
            android:textSize="10sp" />
        <TextView
            android:layout_width="50dp"
            android:text="1127"
            android:layout_marginLeft="165dp"
            android:textSize="10sp"
            android:gravity="center_vertical|left"
            android:drawableLeft="@mipmap/icon_share_black"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="50dp"
            android:text="7"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|left"
            android:layout_marginRight="5dp"
            android:drawableLeft="@mipmap/ic_action_item_comment"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linerlayout_bottom_strategy_details"
        android:layout_below="@id/relate_layout_strategy_details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_cover_image_strategy_details"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/tv_share_msg_strategy_details"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="1dp" />

            <WebView
                android:id="@+id/web_view_strategy_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </WebView>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
